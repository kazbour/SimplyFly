<% include ../partials/header %>

<body class="login">
	<div class="jumbotron">
	  <div class="row">
		<h1 class='col-xs-4 col-xs-offset-4'>SimplyFly</h1>
	  </div>
	  <div class="row">
		<div class='col-xs-4 col-xs-offset-4'>Please log in</div>
		  <div class='col-xs-4 col-xs-offset-4'>
			<% if (err) { %>
			<div style="color:red;">
			<%= err %>
			</div>
			<% } %>
			<form method="POST" action="/login">
				<div>
					<input class="form" type="email" name="email" placeholder="email">
				</div>
				<div>
					<input class="form" type="password" name="password" placeholder="password">
				</div>
					<button class="form">Login</button>
			</form>
		  </div>
	   </div>
	</div>
</body>
</html>