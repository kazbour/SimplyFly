<% include ../partials/header %>

<body class="profile">

	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-xs-offset-1">
				<div><h1>Welcome <%=user.email%></h1></div>
			</div>
		</div>
	</div>
		<div class="container">
			<div class="row">
				<div class="col-xs-4 col-xs-offset-1">
					<div class="panel panel-info">
			 			<div class="panel-heading">
			    			<h3 class="panel-title">Your saved launch sites:</h3>
			  			</div>
				  		<div class="panel-body">

				  			<% if(locations.length) { %>
							<% locations.forEach(function(location) { %>
							<ul>
								<li><%= location.stationName %></li>
							<% }) %>
							<% } else { %>
							<p>You have no launch sites save yet.</p>
							<% }  %>
				  		</div>
					</div>
			  	</div>
			</div>
		</div>

</body>
</html>